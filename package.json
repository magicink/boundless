{
  "name": "boundless",
  "version": "0.0.4",
  "private": true,
  "description": "An experimental React-based story format for Twine.",
  "keywords": [
    "twine",
    "story format",
    "react"
  ],
  "homepage": "https://github.com/magicink/boundless",
  "license": "MIT",
  "author": {
    "name": "Brandon Tom",
    "email": "magicink@gmail.com"
  },
  "main": "dist/format.js",
  "files": [
    "dist/format.js"
  ],
  "scripts": {
    "prebuild": "yarn clean",
    "build": "yarn build:webpack && yarn build:template",
    "build:dev": "yarn prebuild && yarn build:template && webpack serve --mode development",
    "build:template": "node src/build.mjs",
    "build:webpack": "webpack --mode production",
    "clean": "rimraf ./dist",
    "format": "sort-package-json && prettier --write \"**/*.{html,js,json,mjs}\"",
    "prepare": "husky install && yarn build",
    "serve": "cross-env NODE_ENV=development yarn build:dev",
    "test": "cross-env NODE_ENV=development jest"
  },
  "prettier": "@brandontom/prettier",
  "dependencies": {
    "@emotion/react": "11.10.4",
    "@emotion/styled": "11.10.4",
    "hast-util-from-dom": "4.1.0",
    "hastscript": "7.0.2",
    "immer": "9.0.15",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "rehype": "12.0.1",
    "rehype-react": "7.1.1",
    "rehype-stringify": "9.0.3",
    "remark-breaks": "3.0.2",
    "remark-directive": "2.0.1",
    "remark-gfm": "3.0.1",
    "remark-parse": "10.0.1",
    "remark-rehype": "10.1.0",
    "unified": "10.1.2",
    "unist-util-visit": "4.1.1",
    "zustand": "4.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.0",
    "@babel/runtime": "7.19.0",
    "@brandontom/babel-preset": "1.0.27",
    "@brandontom/jest": "1.0.27",
    "@brandontom/prettier": "1.0.27",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "babel-loader": "8.2.5",
    "core-js": "3.25.1",
    "cross-env": "7.0.3",
    "dotenv": "16.0.2",
    "ejs": "3.1.8",
    "husky": "8.0.1",
    "jest": "29.0.2",
    "jest-environment-jsdom": "29.0.2",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "sort-package-json": "1.57.0",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.0",
    "webpack-manifest-plugin": "5.0.0"
  }
}
